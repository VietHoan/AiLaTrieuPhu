<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#2193b0"
        android:paddingStart="2dp"
        android:paddingTop="2dp"
        android:text="Phần thưởng : "
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txt_numberQuestion"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/atp__activity_player_layout_play_answer_background_true"
            android:padding="10dp"
            android:text="Câu 1"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_countDownTimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:text="00:00"
            android:textSize="25dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="#659999"
        android:padding="10dp"
        android:text="Question"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_caseA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_button"
        android:text="Case A"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_caseB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_button"
        android:text="Case B"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_caseC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_button"
        android:text="Case C"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_caseD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_button"
        android:text="Case D"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_50.50Help"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/atp__activity_player_button_image_help_5050" />

        <Button
            android:id="@+id/btn_passHelp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/atp__activity_player_button_image_help_audience" />

        <Button
            android:id="@+id/btn_changeQuestionHelp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/atp__activity_player_button_image_help_change_question" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="By Lê Việt Hoàn" />

</LinearLayout>